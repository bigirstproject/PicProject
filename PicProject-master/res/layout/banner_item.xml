<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sunsun="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black" >

    <com.sunsun.picproject.view.AutoAdjustImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_placeholder_big"
        android:scaleType="fitXY"
        sunsun:adjustType="auto_adjust_scale_height"
        sunsun:scaleRate="1.5" />

</FrameLayout>